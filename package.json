{
  "name": "gorest-api-test",
  "version": "1.0.0",
  "description": "API Integration Test framework",
  "main": "index.js",
  "scripts": {
    "test": "node_modules/.bin/mocha 'specs/*.js'",
    "test_local": "yarn run resetDb && export NODE_ENV=LOCAL && node_modules/.bin/mocha-parallel-tests specs/*.spec.js",
    "server": "node_modules/.bin/nodemon data/mocks/server.js",
    "resetDb": "node util/resetDb.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/register": "^7.10.1",
    "ajv": "^6.12.2",
    "axios": "^0.19.2",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "chai-json-schema-ajv": "^5.0.0",
    "dotenv": "^8.2.0",
    "faker": "^4.1.0",
    "json-server": "^0.16.1",
    "mocha": "^7.2.0",
    "mocha-parallel-tests": "^2.3.0",
    "mochawesome": "^6.1.1",
    "nodemon": "^2.0.4",
    "regenerator-runtime": "^0.13.5"
  },
  "mocha": {
    "require": [
      "dotenv/config",
      "@babel/register"
    ],
    "timeout": 5000,
    "retries": 2,
    "reporter": "node_modules/mochawesome",
    "reporter-option": [
      "overwrite=true",
      "reportTitle=API Test Report",
      "reportPageTitle=API Test Report",
      "reportDir=test_report",
      "reportFilename=test_report",
      "quiet=true",
      "json=false"
    ]
  }
}
